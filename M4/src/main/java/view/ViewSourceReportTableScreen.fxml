<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane
            xmlns="http://javafx.com/javafx/8.0.66" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.ViewSourceReportScreenController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <TableView fx:id="reportTable" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columns>
            <TableColumn editable="false" prefWidth="100" sortable="false" text="Date">
                <cellValueFactory><PropertyValueFactory property="date" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="100" sortable="false" text="Report Number">
                <cellValueFactory><PropertyValueFactory property="reportName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="100" sortable="false" text="Reporter Name">
                <cellValueFactory><PropertyValueFactory property="reporterName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="60.0" sortable="false" text="Latitude">
                <cellValueFactory><PropertyValueFactory property="waterLongitude" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="70.0" sortable="false" text="Longitude">
                <cellValueFactory><PropertyValueFactory property="waterLatitude" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="100" sortable="false" text="Water Type">
                <cellValueFactory><PropertyValueFactory property="waterType" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="100" sortable="false" text="Water Condition">
                <cellValueFactory><PropertyValueFactory property="waterCondition" />
                </cellValueFactory>
            </TableColumn>
           </columns>
        </TableView>
</AnchorPane>
